<div>
{{>navbar}}
  <h1>Productos</h1>

  <div
    class="card-deck"
    id="products-container"
  >
    {{#each products}}

      <div class="card " style="width: 150px;"id={{this.id}}>
        <img
          class="card-img-top img-fluid"
          src={{this.foto}}
          alt="Card image cap"
          style="width: 140px;"
        />
        <div class="card-body">
          <h5 class="card-title">{{this.nombre}}</h5>
          <p class="h4">${{this.precio}}</p>
        </div>
        <button
          type="button"
          class="btn btn-primary articulo__boton-compra"
        >Agregar al carrito</button>
      </div>

    {{/each}}
  </div>

  <h1>Carrito</h1>

  <table class="table table-dark">
    <thead>
      <tr>
        <th scope="col">Foto</th>
        <th scope="col">Producto</th>
        <th scope="col">Precio</th>
        <th scope="col">Cantidad</th>
      </tr>
    </thead>
    <tbody id="tablaCarrito">
      {{#each listaCarrito}}

     <tr>  
  <td><img
  class="card-img-top img-fluid"
  src={{this.foto}}
  alt="Card image cap"
  style="width: 70px;"
/></td>
  <td>{{this.nombre}}</td>
  <td>${{this.precio}}</td>
  <td>{{this.cantidad}}</td>
  <td ><strong class="quitar-producto" data-id="{{this.id}}">X</strong></td>
</tr> 

    {{/each}}
    </tbody>
  </table>

  <button
    id="botonPedido"
    type="button"
    class="btn btn-primary"
  >Hacer pedido</button>
  <button id="botonVaciarCarrito" type="button" class="btn btn-primary">Vaciar
    Carrito</button>

    <script type="text/javascript" src="/main.js"></script>
</div>